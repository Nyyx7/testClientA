<odoo>
    <record model="ir.ui.view" id="crm_lead_form_view_inherited">
        <field name="name">crm.lead.form.inherited</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lang_id']" position="attributes">
                <attribute name="default">en_US</attribute>
                <attribute name="placeholder">English</attribute>
                <attribute name="invisible">0</attribute>
            </xpath>
        </field>
    </record>
</odoo>